
    <!-- Page content -->
    <div class="container mt--6">
      <div class="row align-items-center py-4 mt--250">
        <div class="col-lg-6 col-5">
            <h1 class="font-weight-bold text-white">{{title}}</h1>
        </div>
      </div>
      <div class="row">
        {{#if article.id }}
        <div class="col-xl-12 order-xl-1">
          <div class="card card-profile shadow-none mb- d-block">
            <img src="{{article.profile_img_url}}" alt="Image placeholder" class="card-img-top" >
   
            <div class="card-body pb-0">
              <div class="row">
                <div class="col-6">
                    <p class="">
                        <span class="description"><i class="ni calendar mr-2"></i>{{article.author}} ,</span> 
                        <span class="description"><i class="ni calendar mr-2"></i>{{article.updated_on}}</span>
                   </p>
                </div>
                <div class="col-6 pb-0 text-right">
                    <p class=""> 
                      <span class="heading d-inline">{{article.likes}}</span>  <span class="description">Likes</span>
                    </p>
                </div>
              </div>
            </div>
          </div>
        </div>
        {{/if}}
        <div class="col-xl-12 order-xl-1">
          <div class="card shadow-none mt-0">
          <div class="tab-content">
            <div id="edit" class="tab-pane tab-example-result fade {{#eq article.id 0}}active show{{/eq}}" role="tabpanel" aria-labelledby="alerts-component-tab">

               <!-- Alerts -->
              <div class="alert alert-success m-4 d-none" role="alert">
              This is a success alertâ€”check it out!
              </div>
              <form id="{{#if pet.id }}edit{{else}}add{{/if}}-article-form" role="form" method="{{#if pet.id }}put{{else}}post{{/if}}" action="/articles/{{#if pet.id }}{{pet.id}}{{/if}}">
                <div class="card-header">
                  <div class="row align-items-center">
                    <div class="col-8">
                       <h3 class="mb-0">{{#eq article.id 0}}Fill article info{{/eq}}{{#gt article.id 0}}Edit article{{/gt}} </h3>
                    </div>
                    <div class="col-4 text-right">
                      {{#if article.title}}<input id="article-id" name="id" type="hidden" value="{{article.id}}">{{/if}}
                      <input type="checkbox" class="form-control-input" id="input-publish"/>
                      <label class="form-control-label" for="input-publish">Publish</label>
                      <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                  </div>
                </div>
                <div class="card-body">
                  <form>
                    <h6 class="heading-small text-muted mb-4">article information</h6>
                    <div class="pl-lg-4">
                      <div class="row">
                        <div class="col-lg-6">
                          <div class="form-group">
                            <label class="form-control-label" for="input-title">Title</label>
                            <input type="text" id="input-name" class="form-control" placeholder="Title" value="{{article.title}}">
                          </div>
                        </div>
                    <div class="col-lg-6">
                      <div class="form-group">
                        <label class="form-control-label">Profile picture</label>
                        <input type="file" name="profile_img_url" rows="4" class="form-control" placeholder="Profile picture" value="{{article.profile_img_url}}"/>
                      </div>
                    </div>
                        <div class="col-lg-6">
                          <div class="form-group">
                            <label class="form-control-label" for="input-category">Category</label>
                            <select name="category" type="text" id="input-category" class="form-control">
                              <option value="1">General</option>
                              <option selected value="2">Cats</option>
                              <option selected value="2">Dogs</option>
                              <option selected value="2">Petcare</option>
                              <option selected value="2">Petfood</option>
                            </select>
                          </div>
                        </div>
                        <div class="col-lg-6">
                          <div class="form-group">
                            <label class="form-control-label" for="input-author">Author</label>
                            <input type="text" id="input-author" class="form-control" placeholder="Author" value="{{article.author}}">
                          </div>
                        </div>
                      </div>
                    </div>
                    <hr class="my-4" />
                    <!-- Description -->
                    <h6 class="heading-small text-muted mb-4">Summary</h6>
                    <div class="pl-lg-4">
                      <div class="form-group">
                        <label class="form-control-label">Summary</label>
                        <textarea name="short-content" rows="4" class="form-control" placeholder="Short summary">A beautiful Dashboard for Bootstrap 4. It is Free and Open Source.</textarea>
                      </div>
                    </div>
                    <div class="pl-lg-4">
                      <div class="form-group">
                        <label class="form-control-label">Description</label>
                        <textarea name="content" rows="4" class="form-control" placeholder="A few words about the article ...">A beautiful Dashboard for Bootstrap 4. It is Free and Open Source.</textarea>
                      </div>
                    </div>
                  </form>
                </div>
              </form>

            </div>
            <div id="view" class="tab-pane fade {{#gt article.id 0}}active show{{/gt}}" role="tabpanel" aria-labelledby="alerts-html-tab">
              <div class="card-header">
                 <div class="row align-items-center">
                   <p>{{article.short_content}}</p>
                 </div>                
              </div>
              <div class="card-body">
                <div class="row align-items-center">
                  {{article.content}}
                </div>
              </div>
            </div>
          </div>
          {{#if article.id}}
          <ul class="nav nav-tabs-code py-3" id="alerts-tab" role="tablist">
            <li class="nav-item">
              <a class="nav-link" id="alerts-component-tab" data-toggle="tab" href="#edit" role="tab" aria-controls="alerts-component" aria-selected="false">Edit</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" id="alerts-html-tab" data-toggle="tab" href="#view" role="tab" aria-controls="alerts-html" aria-selected="true">View</a>
            </li>
          </ul>
          {{/if}}
          </div>
        </div>
      </div>
        </div>